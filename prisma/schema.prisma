generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum UserRole {
  USER
  ARTIST
}

model User {
  id String @id @default(uuid())

  name String

  email String @unique

  password String?

  googleId String? @map("google_id") // Para usuarios que se registran con Google

  biography String? @default("Sin biograf√≠a")

  role UserRole @default(USER)

  status Boolean @default(true) // soft delete

  createdAt DateTime @default(now()) @map("created_at")

  socialMedia SocialMedia[]
  following UserFollows[] @relation("follower")
  followers UserFollows[] @relation("followed")
  passwordResets PasswordReset[]

  @@map("users")
}

model PasswordReset {
  id        String   @id @default(uuid())

  userId    String   @map("user_id")

  token     String

  expiresAt DateTime @map("expires_at")

  used Boolean @default(false)

  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_resets")
}

model SocialMedia {
  id String @id @default(uuid())

  userId String @map("user_id")

  url String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@map("social_media")
}

model UserFollows {
  followerId String @map("follower_id")
  followedId String @map("followed_id")

  follower User @relation("follower", fields: [followerId], references: [id], onDelete: Cascade)
  followed User @relation("followed", fields: [followedId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@id([followerId, followedId])
  @@map("user_follows")
}